<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.resource.ResourceMapper">


    <!--方式一：一对多嵌套查询-->
    <resultMap id="Resource" type="com.example.demo.pojo.db.resource.Resource">
        <id column="id" property="id"></id>
        <result column="resource_name" property="resourceName"></result>
        <result column="path" property="path"></result>
        <result column="description" property="description"></result>
        <collection property="authList" ofType="com.example.demo.pojo.db.auth.Auth" javaType="ArrayList">
            <id property="id" column="authId"></id>
            <result property="auth" column="auth"></result>
        </collection>
    </resultMap>

    <select id="getAllResources" resultMap="Resource">
            select a.id, resource_name ,path ,auth , b.auth_id as authId from sys_resource a, sys_resource_auth b ,sys_auth c where
            a.id=b.resource_id and b.auth_id =c.id
    </select>


    <select id="getResourceList" resultMap="Resource">
       select id,resource_name,path,description from sys_resource
    </select>

    <insert id="saveResource" parameterType="com.example.demo.pojo.db.resource.Resource">
        <selectKey  keyProperty="id" resultType="long" order="BEFORE">
            SELECT seq_sys_resource.NEXTVAL FROM DUAL
        </selectKey>
        insert into sys_resource (id,resource_name,description,path)
         values (#{id},#{resourceName},#{description},#{path})
    </insert>

    <delete id="deleteResources" parameterType="java.util.List">
        delete from sys_resource
        where id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="removeAuthAndResourceByResourceIds"  parameterType="java.util.List">
        delete  from sys_resource_auth where resource_id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
             #{id}
        </foreach>
    </delete>

    <update id="editResource"  parameterType="com.example.demo.pojo.db.resource.Resource">
        UPDATE  sys_resource SET resource_name =#{resourceName} , description=#{description},path=#{path} where id =#{id}
    </update>
</mapper>
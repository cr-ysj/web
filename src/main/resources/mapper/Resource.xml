<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.ResourceMapper">


    <!--方式一：一对多嵌套查询-->
    <resultMap id="Resource" type="com.example.demo.pojo.Resource">
        <id column="id" property="id"></id>
        <result column="resource_name" property="resourceName"></result>
        <result column="path" property="path"></result>
        <result column="description" property="description"></result>
        <collection property="authList" ofType="com.example.demo.pojo.Auth" javaType="ArrayList">
            <id property="id" column="authId"></id>
            <result property="auth" column="auth"></result>
        </collection>
    </resultMap>

    <select id="getAllResources" resultMap="Resource">
            select a.id, resource_name ,path ,auth , b.auth_id as authId from sys_resource a, sys_resource_auth b ,sys_auth c where
            a.id=b.resource_id and b.auth_id =c.id
    </select>

</mapper>